{
	"name": "query-registry",
	"description": "Query the npm registry for packuments, manifests, packages and download counts",
	"version": "2.6.0",
	"author": {
		"name": "Edoardo Scibona",
		"url": "https://github.com/velut"
	},
	"license": "MIT",
	"source": "./src/index.ts",
	"main": "./dist/index.js",
	"module": "./dist/query-registry.esm.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/query-registry.esm.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"src",
		"dist"
	],
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"check": "tsc --noEmit",
		"build": "tsc --noEmit && tsup",
		"attw": "attw --pack . --ignore-rules cjs-resolves-to-esm",
		"test": "TODO: vitest run src test/declarations --coverage --bail 1",
		"test:ci": "TODO: vitest run src test/declarations test/packages --coverage --bail 1",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"pre-push": "bun install && bun run lint && bun run build && bun run test:ci && bun run attw",
		"release": "np"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/velut/query-registry.git"
	},
	"bugs": {
		"url": "https://github.com/velut/query-registry/issues"
	},
	"keywords": [
		"query",
		"registry",
		"npm",
		"client",
		"api",
		"packument",
		"package",
		"downloads",
		"search",
		"manifest",
		"typescript"
	],
	"dependencies": {
		"isomorphic-unfetch": "^3.1.0",
		"make-error": "^1.3.6",
		"tiny-lru": "^11.0.1",
		"url-join": "4.0.1",
		"validate-npm-package-name": "^5.0.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.3",
		"@pollyjs/adapter-node-http": "6.0.6",
		"@pollyjs/core": "6.0.6",
		"@pollyjs/persister-fs": "6.0.6",
		"@total-typescript/shoehorn": "^0.1.2",
		"@types/debug": "4.1.12",
		"@types/git-url-parse": "9.0.3",
		"@types/setup-polly-jest": "0.5.5",
		"@types/url-join": "4.0.1",
		"@types/validate-npm-package-name": "4.0.2",
		"babel-jest": "29.7.0",
		"debug": "4.3.4",
		"dts-cli": "2.0.4",
		"eslint-plugin-prettier": "5.1.3",
		"husky": "9.0.11",
		"nock": "13.5.4",
		"np": "10.0.2",
		"prettier": "3.2.5",
		"setup-polly-jest": "0.11.0",
		"ts-jest": "29.1.2",
		"tslib": "2.6.2",
		"tsup": "^8.0.2",
		"typescript": "5.4.3"
	}
}
